{
	"compilerOptions": {
		"ignoreDeprecations": "5.0",
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"]
		},
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"allowJs": true
	},
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/types/*.d.ts", "public"],
	"exclude": ["node_modules", "dist", "**/*.js"],
	"references": [
		{
			"path": "./tsconfig.vite-config.json"
		}
	]
}
